<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} My webpage {% endblock %}</title>     
        {% block stylesheets %}
        <!-- CSS only -->
           <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
           <link rel="stylesheet" href="{{ asset("css/style.css")}}">
        {% endblock %}

        {% block javascripts %}
           <!-- JavaScript Bundle with Popper -->
           <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        {% set year = 2021 %}
        {% block header %}
                <ul class="nav">
                    <li class="nav-item">
                        <h4><a class="nav-link" href="{{ path ("home")}}">Home</a></h4>
                    </li>
                    <li class="nav-item">
                        <h4><a class="nav-link" href="{{ path ("demo")}}">Demo</a></h4>
                    </li>
                    <li class="nav-item">
                        <h4><a class="nav-link" href="{{ path ("hanoi")}}">Hanoi</a></h4>
                    </li>
                </ul>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block footer %}
            <div class="jumbotron-fluid">
                <h3 class="text-center">Copyright by Greenwich University</h3>
            </div>
        {% endblock %}
    </body>
</html>
