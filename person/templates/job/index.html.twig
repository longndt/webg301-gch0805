{% extends "base.html.twig" %}

{% block body %}
<div class="container">
     <div class="text-center mt-3 mb-3">
         <a href="{{ path("job_add") }}">
            <img src="{{ asset("images/add.png") }}" width="50" height="50">
         </a>
    </div>
    <table class="table table-bordered text-center">
        <tr>
            <th>Job ID</th>
            <th>Job Name</th>
            <th>Menu</th>
        </tr>
        {% for j in job %}
            <tr>
                <td>{{ j.id }}</td>
                <td>{{ j.name }}</td>
                <td>
                    <a class="btn btn-outline-info" href="{{ path ('job_detail', {'id' : j.id })}}">
                        Detail
                    </a>
                    <a class="btn btn-outline-warning" href="{{ path ('job_edit', {'id' : j.id })}}">
                        Edit
                    </a>
                    <a class="btn btn-outline-danger" href="{{ path ('job_delete', {'id' : j.id })}}">
                        Delete
                    </a>
                </td>
            </tr>
        {% endfor %}  
    </table>
</div>
{% endblock %}