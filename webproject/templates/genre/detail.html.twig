{% extends 'base.html.twig' %}

{% block body %}
 <div class="container-md col-md-8 text-center mt-4">
   <a href="{{ path('genre_add')}}">
      <img src="{{ asset('images/add.jpg') }}" width="80" height="50">
   </a>
  <table class="table table-striped|sm|bordered|hover|inverse table-inverse table-responsive mt-4">
       <thead>
            <tr>
                <th>Genre name</th>
                <th>Genre description</th>
                <th>Book(s)</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
       </thead>
       <tbody>
           <tr>
                <td>{{ genre.name }}</td>
                <td>{{ genre.description }}</td>
                <td>
                    {% if genre.books != null %}
                        {% for book in genre.books %}
                            <a class="text-decoration-none" href="{{ path('book_detail', {'id' : book.id }) }}">
                                {{ book.title }}
                            </a>
                            <br>
                        {% endfor %}
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('genre_edit', {'id' : genre.id }) }}">
                        <img src="{{ asset('images/edit.png') }}" width="50" height="50">
                    </a>
                </td>
                <td>
                   <a href="{{ path('genre_delete', {'id' : genre.id }) }}"
                     onclick = "return confirm('Do you want to delete this author ?')">
                        <img src="{{ asset('images/delete.png') }}" width="50" height="50">
                    </a>
                </td>
           </tr>
       </tbody>
  </table>
</div>
{% endblock %}
