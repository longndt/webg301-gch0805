{% extends 'base.html.twig' %}

{% block body %}
 <div class="container-md col-md-8 text-center">
 {# {% if book != null %} #}
     <table class="table table-striped|sm|bordered|hover|inverse table-inverse table-responsive">
      <thead class="thead-inverse|thead-default">
          <tr>
              <th>Book Title</th>
              <th>Book Cover</th>
              <th>Book Price</th>
              <th>Book Year</th>
              <th>Book Genre</th>
              <th>Book Authors</th>
              <th>Actions</th>
          </tr>
          </thead>
          <tbody>
               <tr>
                  <td>{{ book.title }}</td>
                  <td>
                      <img src="{{ asset('covers/'~book.cover) }}" width="100" height="120">  
                  </td>
                  <td>{{ book.price }} $</td>
                  <td>{{ book.year }}</td>
                  <td>
                    {% if (book.genre != null)  %}
                       <a class="text-decoration-none" href="{{ path('genre_detail', {'id' : book.genre.id }) }}">
                          {{ book.genre.name }}
                        </a> 
                    {% endif %}
                  </td>
                  <td> 
                    {% if (book.authors != null) %}
                         {% for author in book.authors %}
                          <a class="text-decoration-none" href="{{ path('author_detail', {'id' : author.id }) }}">
                          {{ author.name }}
                          </a>
                          <br>
                      {% endfor %}
                    {% endif %}
                  </td>
                  <td>
                    <a class="btn btn-warning" href="{{ path('book_edit', {'id' : book.id })}}">
                    Edit
                    </a>
                    <a class="btn btn-danger" href="{{ path('book_delete', {'id' : book.id }) }}"
                    onclick = "return confirm('Do you want to delete this book ?')"
                    >
                    Delete
                    </a>
                  </td>
              </tr>          
          </tbody>
    </table>
  {# {% else %}
    <h3>Book not found</h3>
    <h4>
      <a href="{{ path('book_index') }}">
        Redirect to book list
      </a>
    </h4>
  {% endif %}
  #}
</div>
{% endblock %}